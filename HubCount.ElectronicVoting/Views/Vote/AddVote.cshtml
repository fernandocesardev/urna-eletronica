@using Newtonsoft.Json
@model HubCount.ElectronicVoting.Models.Vote

@{
    ViewData["PageTitle"] = Model.VoteId == 0 ? "Escolha seu candidato" : "";
}

<div class="row">
    <div class="col-md-5">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="AddVote">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="VoteId" value="@Model.VoteId" />

                <div class="mb-3">
                    <ejs-datepicker id="date" ejs-for="Date" placeholder="Data" floatLabelType="Always"
                        format="MMM-dd-yy hh:mm" readonly></ejs-datepicker>
                </div>

                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCandidate" ejs-for="CandidateId" dataSource="@ViewBag.Candidates"
                        placeholder="Candidato" floatLabelType="Always">
                        <e-dropdownlist-fields value="CandidateId" text="Name"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </div>

                <ejs-button id="submit" type="submit" content="Submit" cssClass="e-success"></ejs-button>

            </form>
        </div>
    </div>
</div>
